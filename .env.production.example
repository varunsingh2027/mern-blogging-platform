# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# MongoDB Configuration
MONGO_ROOT_USERNAME=your_mongodb_root_username
MONGO_ROOT_PASSWORD=your_mongodb_root_password
MONGO_DATABASE=blog_production

# JWT Configuration  
JWT_SECRET=your_super_secure_jwt_secret_key_for_production_at_least_64_characters_long
JWT_EXPIRE=30d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret

# URLs
CLIENT_URL=https://your-domain.com
REACT_APP_API_URL=https://api.your-domain.com/api

# Optional: Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_email_password

# Optional: Analytics & Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_SENTRY_DSN=your_production_sentry_dsn
